/**index.wxss**/
.i-say {
    position: relative;
    overflow: hidden;
}

.user-info {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 30px 0 45px;
    width: 100%;
    background-color: #1479ff;
}

.user-info .avatar {
    position: relative;
    z-index: 2;
    border: 5px solid rgba(255, 255, 255, .7);
    border-radius: 50%;
    overflow: hidden;
}

.user-info .avatar .user-head {
    display: block;
    width: 100px;
    height: 100px;
}

.user-info .page-bg {
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: 1;
    width: 100%;
    height: 40px;
    background: url(data:image/png;base64,) center top transparent;
    background-size: cover;
}

.page-main {
    display: flex;
    flex-direction: column;
    padding: 30px 20px;
    flex-grow: 1;
    width: 100%;
    box-sizing: border-box;
}

.page-main .card-form {
    position: relative;
    display: block;
    flex-grow: 1;
    width: 100%;
}

.page-main .card-input {
    padding: 5px 0;
    border-bottom: 1px solid #f0f0f0;
}

.page-main .card-content {
    margin-top: 30px;
    max-height: 300px;
}

.page-main .card-textarea {
    margin: 0;
    padding: 0;
    width: 100%;
    font-size: 14px;
    line-height: 24px;
    min-height: 150px;
    overflow: hidden;
}

.page-main .content-prev {
    margin: 0;
    padding: 0;
    width: 100%;
    font-size: 14px;
    line-height: 24px;
}

.page-main .ta-pla {
    font-size: 14px;
    color: #999;
}

.page-main .card-row {
    position: absolute;
    bottom: 0;
    width: 100%;
}

.i-say .preview {
    position: absolute;
    z-index: 10;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    width: 100%;
    height: 100%;
    background-color: transparent;
}

.i-say .preview .prev-main {
    position: relative;
    width: 100%;
    height: 72%;
    background-color: #fff;
    overflow: hidden;
}

.i-say .preview .prev-main .card-maker {
    width: 100%;
    height: 100%;
}

.i-say .preview .prev-main .save-view {
    position: absolute;
    right: 20px;
    bottom: 30px;
    left: 20px;
}

.i-say .preview .prev-closer {
    position: absolute;
    top: 0;
    right: 0;
    z-index: 10;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.i-say .preview .prev-closer cover-image {
    width: 18px;
    height: 18px;
    visibility: visible;
}

.i-say .preview .prev-img {
    width: 100%;
}

